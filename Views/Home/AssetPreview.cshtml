@model List<AssetViewModel>
@{
    ViewData["Title"] = "2D ASSETS";
}
<div class="container p-0">
    <div class="row mb-5">
        @{
            foreach (var item in Model)
            {
                <!-- responsive columns with margins -->
                <div class="col-md-4 col-sm-6 col-12 my-3 card_column">
                    <a asp-area="" asp-controller="Home" asp-action="Asset" asp-route-id="@item.Id">
                        <!-- cards inside those columns with max height -->
                        <div class="card h-100 shadow-lg rounded-0 border-0">
                            <!-- body on upper side of card for text -->
                            <div class="card-body pb-0 pt-4 rounded-0">
                                <!-- row on bottom side of card divided into 2 columns -->
                                <div class="row align-items-end pt-1">
                                    <!-- column 1 for title -->
                                    <div class="col-8 pl-1">
                                        <h4 class="card-title">@item.Title</h4>
                                    </div>
                                    <div class="col-4 pr-1">
                                        <h5 class="card-title text-right">@item.Price EUR</h5>
                                    </div>
                                </div>
                            </div>
                            <!-- image on the bottom of card -->
                            <div class="image_wrapper">
                                <div>
                                    <img src='@Url.Content($@"/Content{item.Images.Single(x=>x.ImageType == ImageType.Preview).Path}")' class="card-img-bottom card-custom-img rounded-0" alt="@item.Images.First().Name" />
                                </div>
                                <div class="card_overlay">
                                    <p class='card_overlay_button'>DETAILS</p>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            }
        }
    </div>
</div>
